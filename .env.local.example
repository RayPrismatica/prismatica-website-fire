# Anthropic API Keys
# Separate keys for different services (can fallback to single ANTHROPIC_API_KEY)
ANTHROPIC_API_KEY_CONTENT=your_anthropic_api_key_for_content_generation
ANTHROPIC_API_KEY_CHAT=your_anthropic_api_key_for_chat
ANTHROPIC_API_KEY=your_anthropic_api_key_fallback

# Email Service
RESEND_API_KEY=your_resend_api_key

# Vercel Blob Storage
# Get this from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=your_blob_read_write_token
# The public URL where your blob is stored (set automatically by Vercel)
BLOB_URL=https://your-blob-store.public.blob.vercel-storage.com/dynamic-content.json
